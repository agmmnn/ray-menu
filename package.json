{
  "name": "ray-menu",
  "version": "0.1.3",
  "type": "module",
  "description": "A framework-agnostic radial (pie) menu library for the modern web.",
  "author": "agmmnn",
  "license": "MIT",
  "homepage": "https://github.com/agmmnn/ray-menu",
  "repository": {
    "type": "git",
    "url": "https://github.com/agmmnn/ray-menu.git",
    "directory": "/"
  },
  "bugs": {
    "url": "https://github.com/agmmnn/ray-menu/issues"
  },
  "keywords": [
    "web-component",
    "custom-element",
    "radial-menu",
    "pie-menu",
    "context-menu",
    "headless",
    "typescript"
  ],
  "main": "./dist/wc/ray-menu.cjs",
  "module": "./dist/wc/ray-menu.mjs",
  "types": "./dist/wc/wc/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/wc/wc/index.d.ts",
        "default": "./dist/wc/ray-menu.mjs"
      },
      "require": {
        "types": "./dist/wc/wc/index.d.ts",
        "default": "./dist/wc/ray-menu.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/ray-menu-core.mjs"
      },
      "require": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/ray-menu-core.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/react/index.d.ts",
        "default": "./dist/react/ray-menu-react.mjs"
      },
      "require": {
        "types": "./dist/react/react/index.d.ts",
        "default": "./dist/react/ray-menu-react.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "./src/wc/index.ts",
    "./dist/wc/ray-menu.mjs",
    "./dist/wc/ray-menu.cjs"
  ],
  "scripts": {
    "dev": "vite --config playground/vite.config.ts",
    "build": "tsc -b && vite build && vite build --mode react && vite build --mode core",
    "build:wc": "vite build",
    "build:react": "vite build --mode react",
    "build:core": "vite build --mode core",
    "build:watch": "vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "playground": "vite --config playground/vite.config.ts",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "ajv": "^8.18.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
