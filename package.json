{
  "name": "ray-menu",
  "version": "0.1.0",
  "type": "module",
  "description": "A framework-agnostic radial (pie) menu library for the modern web.",
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/agmmnn/ray-menu",
  "repository": {
    "type": "git",
    "url": "https://github.com/agmmnn/ray-menu.git",
    "directory": "/"
  },
  "bugs": {
    "url": "https://github.com/agmmnn/ray-menu/issues"
  },
  "keywords": [
    "web-component",
    "custom-element",
    "radial-menu",
    "pie-menu",
    "context-menu",
    "headless",
    "typescript"
  ],
  "main": "./dist/wc/ray-menu.cjs",
  "module": "./dist/wc/ray-menu.mjs",
  "types": "./dist/wc/wc/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/wc/wc/index.d.ts",
        "default": "./dist/wc/ray-menu.mjs"
      },
      "require": {
        "types": "./dist/wc/wc/index.d.ts",
        "default": "./dist/wc/ray-menu.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/wc/core/index.d.ts",
        "default": "./dist/wc/ray-menu.mjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite --config playground/vite.config.ts",
    "build": "tsc -b && vite build",
    "build:watch": "vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "playground": "vite --config playground/vite.config.ts",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "ajv": "^8.18.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
